{
  "name": "@opentelemetry/instrumentation-spanner",
  "version": "0.0.1",
  "description": "OpenTelemetry instrumentation for `@google-cloud/spanner` database client for Google Cloud Spanner",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "repository": "open-telemetry/opentelemetry-js-contrib",
  "scripts": {
    "clean": "rimraf build/*",
    "compile": "tsc -p .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "precompile": "tsc --version && lerna run version:update --scope @opentelemetry/instrumentation-spanner --include-dependencies",
    "prewatch": "npm run precompile",
    "prepublishOnly": "npm run compile",
    "tdd": "npm run test -- --watch-extensions ts --watch",
    "test": "nyc ts-mocha -p tsconfig.json 'test/**/*.test.ts'",
    "pretest": "npm run compile",
    "version:update": "node ../../../scripts/version-update.js"
  },
  "keywords": [
    "instrumentation",
    "spanner",
    "nodejs",
    "opentelemetry",
    "profiling",
    "tracing",
    "cloud spanner",
    "google cloud spanner"
  ],
  "author": "OpenTelemetry Authors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.js.map",
    "build/src/**/*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@google-cloud/spanner": ">=6.1.0",
    "@opentelemetry/api": "^1.3.0",
    "@opentelemetry/context-async-hooks": "^1.8.0",
    "@opentelemetry/contrib-test-utils": "^0.40.0",
    "@opentelemetry/sdk-metrics": "^1.8.0",
    "@opentelemetry/sdk-trace-base": "^1.8.0",
    "@types/mocha": "7.0.2",
    "@types/node": "18.6.5",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "mocha": "7.2.0",
    "nyc": "15.1.0",
    "rimraf": "5.0.5",
    "ts-mocha": "10.0.0",
    "typescript": "4.4.4",
    "typescript-eslint": "^8.3.0"
  },
  "dependencies": {
    "@opentelemetry/instrumentation": "^0.52.0",
    "@opentelemetry/instrumentation-spanner": "file:",
    "@opentelemetry/semantic-conventions": "^1.22.0"
  },
  "homepage": "https://github.com/open-telemetry/opentelemetry-js-contrib/tree/main/plugins/node/opentelemetry-instrumentation-spanner#readme"
}
